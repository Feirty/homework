<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jiajun.edusocial.MainActivity" >

		<com.jiajun.edusocial.ActionBar4first 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/actionbar4main"
        android:layout_marginBottom="90dp"
        ></com.jiajun.edusocial.ActionBar4first>
    <TextView
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="面向学校教学管理的移动社交系统"
        android:textSize="25sp"
        android:id="@+id/title"
        android:textColor="#033508"
        android:gravity="center" 
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>
    <LinearLayout 
   	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp"
   	    >
   	    <LinearLayout 
   	        android:layout_width="match_parent"
   	        android:layout_height="wrap_content"
   	        android:layout_marginTop="40dp"

   	        >
   	        <TextView 
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:textSize="18sp"
   	        android:textColor="#033508"
   	        android:text="账号："
   	        />
	    	<EditText 
		    	android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:hint="请输入登陆账号！"
		        android:id="@+id/InputAccount"
		        android:maxLength="20"
		        android:selectAllOnFocus="true"
	        />
   	    </LinearLayout>
   	    <LinearLayout 
   	        android:layout_width="match_parent"
   	        android:layout_height="wrap_content"
   	        android:layout_marginTop="20dp"

   	        >
   	        <TextView 
   	            android:layout_width="wrap_content"
   	            android:layout_height="wrap_content"
   	            android:text="密码："
   	            android:textSize="18sp"
   	            android:textColor="#033508"
   	            />
   	        <EditText 
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:hint="请输入登陆密码！"
		    	android:id="@+id/InputPassword"
		    	android:password="true"
		    	android:maxLength="20"
			/>
   	    </LinearLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"

		    android:layout_marginTop="20dp">
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="身份："
		        android:textColor="#033508"
		        android:textSize="18sp"/>
		    <Spinner 
		        android:id="@+id/mySpinner"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:prompt="@string/tips"
		        android:spinnerMode="dialog"

	        />
		</LinearLayout>



    <Button 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="登陆"
        android:textColor="#033508"
        android:textSize="31sp"
        android:id="@+id/submit"
        android:background="@drawable/btn"

        
        />
    <Button 
        android:text="还没账号？立即注册"
        android:padding="0dp"
        android:background="#00000000"
        android:layout_marginTop="10dp"
        android:id="@+id/register"
        android:layout_height="40dp"
        android:layout_width="110dp"
        android:shadowColor="#aa5"
        android:shadowRadius="1"
        android:shadowDx="5"
        android:shadowDy="5"
        android:textSize="11sp"

        android:layout_gravity="right"
        />
	</LinearLayout>

</LinearLayout>

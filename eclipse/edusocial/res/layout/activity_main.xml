<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jiajun.edusocial.First.MainActivity" >

    <!-- 
		<com.jiajun.edusocial.ActionBar4first 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/actionbar4main"
        android:layout_marginBottom="90dp"
        ></com.jiajun.edusocial.ActionBar4first>
    
     -->
    <LinearLayout 
	    android:orientation="horizontal"
        android:layout_width="match_parent" 
    	android:layout_height="wrap_content" 
    	android:layout_alignParentLeft="true"
     	android:background="#ee3d11"
    	android:gravity="center"
    	android:layout_marginBottom="90dp"
    	android:padding="10dp"
	    >
	    <ImageView
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:src="@drawable/actionbar_logo"
	        />
	    <TextView 
	        android:id="@+id/tv_title4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/title4firstup"
    		android:layout_marginLeft="10dip"
    		android:textSize="18dp"
    		android:textColor="#fff"
	        />
	</LinearLayout>

    <TextView
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title4firstcenter"
        android:textSize="25sp"
        android:id="@+id/title"
        android:textColor="#033508"
        android:gravity="center" 
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>
    <LinearLayout 
   	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp"
   	    >
   	    <LinearLayout 
   	        android:layout_width="match_parent"
   	        android:layout_height="wrap_content"
   	        android:layout_marginTop="40dp"

   	        >
   	        <TextView 
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:textSize="18sp"
   	        android:textColor="#033508"
   	        android:text="@string/acc:"
   	        />
	    	<EditText 
		    	android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:hint="@string/inputzhanghao"
		        android:id="@+id/InputAccount"
		        android:maxLength="20"
		        android:selectAllOnFocus="true"
	        />
   	    </LinearLayout>
   	    <LinearLayout 
   	        android:layout_width="match_parent"
   	        android:layout_height="wrap_content"
   	        android:layout_marginTop="20dp"

   	        >
   	        <TextView 
   	            android:layout_width="wrap_content"
   	            android:layout_height="wrap_content"
   	            android:text="@string/mima:"
   	            android:textSize="18sp"
   	            android:textColor="#033508"
   	            />
   	        <EditText 
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:hint="@string/inputmima"
		    	android:id="@+id/InputPassword"
		    	android:password="true"
		    	android:maxLength="20"
			/>
   	    </LinearLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"

		    android:layout_marginTop="20dp">
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/identity:"
		        android:textColor="#033508"
		        android:textSize="18sp"/>
		    <Spinner 
		        android:id="@+id/mySpinner"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:prompt="@string/tips"
		        android:spinnerMode="dialog"

	        />
		</LinearLayout>



    <Button 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="@string/login"
        android:textColor="#033508"
        android:textSize="31sp"
        android:id="@+id/submit"
        android:background="@drawable/btn"

        
        />
    <Button 
        android:text="@string/noregist:"
        android:padding="0dp"
        android:background="#00000000"
        android:layout_marginTop="10dp"
        android:id="@+id/register"
        android:layout_height="40dp"
        android:layout_width="110dp"
        android:shadowColor="#aa5"
        android:shadowRadius="1"
        android:shadowDx="5"
        android:shadowDy="5"
        android:textSize="11sp"

        android:layout_gravity="right"
        />
	</LinearLayout>

</LinearLayout>

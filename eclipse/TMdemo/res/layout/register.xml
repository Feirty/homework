<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <com.jj.tmdemo.ActionBar4register 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"></com.jj.tmdemo.ActionBar4register>
	<LinearLayout 
   	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp"
   	    >
   	    <LinearLayout 
   	        android:layout_width="match_parent"
   	        android:layout_height="wrap_content">
   	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="15sp"
	            android:text="昵称："
	            />
	        <EditText 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:id="@+id/edit4nick"
	            android:hint="长度重名验证"
	            android:maxLength="20"
		        android:selectAllOnFocus="true"
	            />
   	    </LinearLayout>
   	    <LinearLayout 
   	        android:layout_width="match_parent"
   	        android:layout_height="wrap_content"
   	        android:paddingTop="10dp"
   	        >
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="15sp"
	            android:text="账号："
	            />
	        <EditText 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:hint="长度重名验证"
	            android:id="@+id/edit4account"
				android:maxLength="20"
	            />
	    </LinearLayout>
	    <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingTop="10dp">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="15sp"
	            android:text="密码："
	            />
	        <EditText 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:password="true"
	            android:maxLength="20"
	            android:id="@+id/edit4password"
	            android:hint="长度验证"
	            />
		</LinearLayout>

	    <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingTop="10dp"
		    >
		    <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="15sp"
	            android:text="用户身份："
	            />
	            <Spinner 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/mSpinner4r"
	        />
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingTop="10dp"
		    >
		    <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="15sp"
	            android:text="学校："
	            
	            />
		<!-- 
			            <Spinner 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/mySpinner4School"

	        />
		 -->
		 <TextView 
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
			 android:hint="点选学校"
			 android:gravity="center"
			 
		     android:id="@+id/text4school"/>
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingTop="10dp"
		    >
		    <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="15sp"
	            android:text="班级："
	            />
		    <!-- 
		    	            <Spinner 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/mySpinner4Class"
	        />
		     -->
		     <TextView 
		         android:layout_width="match_parent"
		         android:layout_height="wrap_content"
				 android:gravity="center"
				 android:hint="点选班级"
		         
		         android:id="@+id/text4class"/>
		    

		</LinearLayout>

		<Button 
		    android:layout_width="match_parent"
		    android:layout_height="40dp"
		    android:id="@+id/Registerbtn"
		    android:layout_marginTop="30sp"
		    android:text="注册"/>
   	    
	</LinearLayout>
    
</LinearLayout>

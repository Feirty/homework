/**app.wxss**/
@import 'style/weui.wxss';

page{
    background-color: #F8F8F8;
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 12px;
    margin-bottom: 12px; 
    background-color: #FFFFFF;
    border-top: 0.5px solid #DCDCDC;
    border-bottom: 0.5px solid #DCDCDC;
}
.page__bd {
    padding-bottom: 40px;
    border-top: 1px silod gray;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}

.icon-item {
    margin-top: -5px;
    margin-right: 5px;
    vertical-align: middle;
    width:20px; 
    height: 20px;
}
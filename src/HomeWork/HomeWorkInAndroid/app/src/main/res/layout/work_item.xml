<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:layout_marginTop="3dp"
    android:paddingRight="20dp"
    android:background="@color/bg_White"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:src="@drawable/rework" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_suj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_subject"
            android:text="1414080903229-麦贤军-实验1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textIsSelectable="false" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_suj">
        <TextView
            android:id="@+id/tv_sentdate"
            android:gravity="left"
            style="@style/text"
            android:text="2017-03-02 11:52:52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_suj"
            android:layout_alignParentLeft="true"
            android:textIsSelectable="false" />
        <TextView
            style="@style/text"
            android:id="@+id/tv_course"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="false" />
        <TextView
            android:id="@+id/tv_shu01"
            style="@style/text"
            android:gravity="right"
            android:text="25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="false" />
        <TextView
            android:id="@+id/tv_"
            android:gravity="right"
            android:text="/"
            android:textColor="@color/text_clo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="false" />
        <TextView
            android:id="@+id/tv_shu02"
            android:gravity="right"
            android:textColor="@color/text_clo"
            android:text="58"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textIsSelectable="false" />
    </LinearLayout>
    </RelativeLayout>
</LinearLayout>